#!/usr/bin/env bash
# Test script for terminal_launcher

source "${HOME}/.config/xmobar/scripts/terminal_launcher"

echo "=== Terminal Launcher Test ==="
echo "Current TERM: $TERM"
echo ""
echo "Testing launch_terminal with class 'test_terminal'..."
echo "This will open your current terminal ($TERM) with WM_CLASS='test_terminal'"
echo ""
read -p "Press Enter to launch..."

launch_terminal "test_terminal"

echo ""
echo "Terminal launched in background!"
echo "Check with: xprop WM_CLASS (then click the window)"
